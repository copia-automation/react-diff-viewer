{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "es5",
    "declaration": true,
    "downlevelIteration": true,
    "lib": ["esnext", "dom"],
    "types": ["mocha", "node"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
